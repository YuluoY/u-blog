{
  "name": "@u-blog/snowfall",
  "version": "0.0.1",
  "description": "Vue3 飘雪插件：全屏雪花、主题色渐变、悬停停住并显示暖心文案",
  "type": "module",
  "main": "./dist/snowfall.umd.cjs",
  "module": "./dist/snowfall.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/snowfall.es.js",
      "require": "./dist/snowfall.umd.cjs"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "files": ["dist"],
  "scripts": {
    "build": "vite build && cp declarations.d.ts dist/index.d.ts",
    "dev": "vite build --watch"
  },
  "peerDependencies": {
    "vue": "^3.4.0"
  },
  "keywords": ["vue", "vue3", "snowfall", "snow", "plugin"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.4",
    "typescript": "^5.0.0",
    "vite": "^5.2.6"
  }
}
