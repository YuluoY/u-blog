    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "@fortawesome/vue-fontawesome": "^3.0.6",
    "@popperjs/core": "^2.11.8",
    "@vueuse/core": "^13.9.0",
    "async-validator": "^4.2.5",
    "lodash-es": "^4.17.21",
    "monaco-editor": "^0.53.0",
    "normalize.css": "^8.0.1",
    "sass": "^1.68.0",
    "vue3-i18n": "^1.1.5"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.20",
    "@vitejs/plugin-vue": "^6.0.1",
