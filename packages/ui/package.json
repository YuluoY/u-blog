{
  "name": "@u-blog/ui",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "pnpm run build:es && pnpm run build:umd && pnpm run copy-package && pnpm run generate-components-dts",
    "build:es": "vite build --config vite.es.config.ts && pnpm run copy-package && pnpm run generate-components-dts",
    "build:es:watch": "vite build --config vite.es.config.ts --watch",
    "build:umd": "vite build --config vite.umd.config.ts && pnpm run copy-package && pnpm run generate-components-dts",
    "copy-package": "copy package.json dist\\package.json",
    "generate-components-dts": "node scripts/generate-components-dts.js",
    "dev": "pnpm run build:es:watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/core/index.d.ts",
      "import": "./dist/es/index.js",
      "require": "./dist/umd/index.umd.cjs"
    },
    "./dist/": {
      "import": "./dist/",
      "require": "./dist/"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.13.1",
