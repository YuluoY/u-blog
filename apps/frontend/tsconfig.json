{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ES2015"],
    "baseUrl": ".",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vite/client", "node"],
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler"
  },
  "globals": {
    "UApp": true
  },
  // 需要被编译的目录/文件
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/auto-import.d.ts",
    "./global.d.ts",
    "vite.config.mts"
  ],
  // 不需要被编译的目录/文件
  "exclude": [
    "**/*.test.ts",
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.spec.d.ts",
    "**/*.spec.d.tsx",
    "**/*.spec.js",
    "**/*.spec.jsx",
    "**/*.spec.cjs",
    "**/*.spec.mjs"
  ]
}
